@model MagicVillaWeb.Models.ViewModels.VillaNumberCreateVM

<form asp-action="CreateVillaNumber">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Create Villa Number</h1>
		<hr />

		<div class="row">
@*			<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
@*			Custom Error Messages will also be displayed with "All"*@
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="col-2">
				<label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="@Model.VillaNumber.VillaNo" class="form-control" />
				<span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="@Model.VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
					<option disabled selected>--Select Villa--</option>
				</select>
				<span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="@Model.VillaNumber.SpecialDetails" class="form-control" ></textarea>
				<span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
			</div>

			<div class="col-5 offset-2">
				<a asp-controller="VillaNumber" asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Create" class="btn btn-success form-control" />
			</div>
		</div>
	</div>
</form>

@*all of the asp-validation-for validation are inside the following
script, so we must include it at the end*@

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
@model MagicVillaWeb.Models.ViewModels.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Delete Villa Number</h1>
		<hr />

		<input hidden asp-for="VillaNumber.VillaNo" />

		<div class="row">

			<div class="col-2">
				<label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="@Model.VillaNumber.VillaNo" disabled class="form-control" />
			</div>

			<div class="col-2">
				<label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="@Model.VillaNumber.VillaID" disabled class="form-select" asp-items="@Model.VillaList">
					<option disabled selected>--Select Villa--</option>
				</select>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="@Model.VillaNumber.SpecialDetails" readonly class="form-control" ></textarea>
			</div>

			<div class="col-5 offset-2">
				<a asp-controller="VillaNumber" asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-success form-control" />
			</div>
		</div>
	</div>
</form>

@*all of the asp-validation-for validation are inside the following
script, so we must include it at the end*@

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}